root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.ts]
indent_size = 2

[{*.yaml,*.yml}]
charset = utf-8
indent_style = space
indent_size = 2

[*.sh]
end_of_line = lf

[*.{cmd, bat}]
end_of_line = crlf

[*.md]
max_line_length = 120
